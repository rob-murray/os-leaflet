{
  "extends": "airbnb-base/legacy",
  "plugins": [],
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "amd": true
  },
  "globals" : {
    "$": false
  },
  "rules": {
    "indent": [2, 2],
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "one-var": 0,
    "global-require": 0,
    "func-names": 0,
    "no-param-reassign": 1
  }
}
